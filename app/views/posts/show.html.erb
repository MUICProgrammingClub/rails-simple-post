<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.username %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= comment.content %>
      <i>
        by <%= comment.user.username %>
      </i>
    </li>
  <% end %>
</ul>

<%= render 'comments/form' %>
<br>
